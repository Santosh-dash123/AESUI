@{
    ViewBag.Title = "Student";
}

<link href="~/css/style.css" type="text/css" rel="stylesheet" />
<style>
    .password-container {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .toggle-confirmpassword {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }
    input[type="file"] {
        display: none;
    }

    #imageContainer {
        position: relative;
        width: 200px;
        height: 200px;
        overflow: hidden;
        color:black;
        font-size:large;
    }

    #defaultImage {
        width: 100%;
        height: 100%;
        background-size:cover;
        background-repeat:no-repeat;
        cursor: pointer;
    }
</style>

<div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card bg-light">
                <div>
                    <h4 class="mb-0">Student Master</h4>
                </div>
                <div class="tabs">
                    <ul class="nav nav-tabs" id="myTabs">
                        <li class="nav-item">
                            <a class="nav-link active" id="tab1" data-toggle="tab" href="#content1" onclick="toggleTabs('content1')">ADD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tab2" data-toggle="tab" href="#content2" onclick="toggleTabs('content2')">View</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-12" id="content1">
            <div class="card">
                <div class="card-body">
                    <div class="basic-form">

                        <form id="form_id">
                            <div class="row">
                                <input type="hidden" name="stdid" id="stdid">
                                <div class="form-group col-md-3">
                                    <label>FirstName</label>
                                    <input type="text" class="form-control" placeholder="First Name" id="txt_FirstName" tabindex="1">
                                </div>

                                <div class="form-group col-md-3">
                                    <label>LastName</label>
                                    <input type="text" class="form-control" placeholder="Last Name" id="txt_LastName" tabindex="2">
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Email</label>
                                    <input type="email" class="form-control" placeholder="Email" id="txt_StdEmail" name="Email" tabindex="3">
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Gender</label>
                                    <select class="form-control rounded" id="ddl_StdGender" tabindex="4">
                                        <option disabled selected>Select</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Others">Others</option>
                                    </select>
                                </div>

                                @*<div class="form-group col-md-3">
                                    <label>Upload Photo</label>
                                    <input type="file" class="form-control-file" placeholder="Photo" id="txt_StdPhoto" tabindex="5">
                                </div>*@

                                <div class="from-group col-md-3" id="imageContainer">
                                    <label><b>Upload Photo</b></label>
                                    <img id="defaultImage" src="~/images/default_image.png" alt="Default Image" onclick="openFileInput()">
                                    <input type="file" id="txt_StdPhoto" onchange="updateImage()" accept="image/*">
                                </div>

                                <div class="form-group col-md-3">
                                    <label for="Date Of Birth">Date Of Birth</label>
                                    <input type="date" class="form-control" placeholder="DOB" id="cd_dob" tabindex="6">
                                </div>

                                <div class="form-group col-md-3">
                                    <label for="Adhar No">Aadhaar No</label>
                                    <input type="text" class="form-control" placeholder="AadhaarNumber" id="txt_AadharNo" tabindex="7" maxlength="14" />
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Phone No</label>
                                    <input type="text" class="form-control" placeholder="Phone No" id="txt_PhoneNo" tabindex="8" maxlength="10" oninput="validateInput(this)" />
                                </div>


                                <div class="form-group col-md-3">
                                    <label style="color:black; font-size:large"><b>Permanent Address </b></label>
                                    <textarea class="form-control" rows="3" placeholder="PermanentAddress" id="PermanentDetails" tabindex="9"></textarea>
                                </div>

                                <div class="form-group col-md-3">
                                    <label style="color:black; font-size:large"><b>Current Address </b></label>
                                    <textarea class="form-control" rows="3" placeholder="CurrentAddress" id="CurrentDetails" tabindex="10"></textarea>
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Blood Group</label>
                                    <select class="form-control rounded" id="ddl_BloodGroup" tabindex="11">
                                        <option value="" selected>Select</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Nationality</label>
                                    <input type="text" class="form-control" placeholder="Nationality" id="txt_Nationality" tabindex="12">
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Religion</label>
                                    <input type="text" class="form-control" placeholder="Religion" id="txt_Religion" tabindex="13">
                                </div>

                                <div class="form-group col-md-3">
                                    <label>State</label>
                                    <input type="text" class="form-control" placeholder="State" id="txt_State" tabindex="14">
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Enter Password</label>
                                    <div class="password-container">
                                        <input type="password" class="form-control" id="txt_StdPwd" tabindex="15" placeholder="Password">
                                        <span class="toggle-password" onclick="togglePassword('txt_StdPwd', 'eye-icon-pwd')"><i class="fa fa-eye-slash" id="eye-icon-pwd" style="color:black;"></i></span>
                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <label>Confirm Password</label>
                                    <div class="password-container">
                                        <input type="password" class="form-control" id="txt_StdConfrpwd" tabindex="16" placeholder="Confrim Password">
                                        <span class="toggle-confirmpassword" onclick="togglePassword('txt_StdConfrpwd', 'eye-icon-confpwd')"><i class="fa fa-eye-slash" id="eye-icon-confpwd" style="color:black;"></i></span>
                                    </div>
                                </div>



                            </div>
                            <div class="row">
                                <div class="col-md-3 posit">
                                    <button type="button" class="btn btn-primary" id="btn_submit" tabindex="17" onclick="Student(event)">SUBMIT</button>
                                    <button type="button" class="btn btn-danger" id="btn_cancel" tabindex="18" onclick="clearStudentData()">CANCEL</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- View Content -->
        <!-- Your "View" content -->
        <div class="col-lg-12" id="content2" style="display: none;">
            <!-- View Content -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered table-striped dataTable" id="tblViewArea" style="width:100%">
                                <thead>
                                    <tr class="headergrid">
                                        <th style="text-align:center;">Sl No</th>
                                        <th style="text-align:center;">FirstName</th>
                                        <th style="text-align:center;">LastName</th>
                                        <th style="text-align:center;">Email</th>
                                        <th style="text-align:center;">Gender</th>
                                        <th style="text-align:center;">DOB</th>
                                        <th style="text-align:center;">Phone No</th>
                                        <th style="text-align:center;">Password</th>
                                        <th style="text-align:center;width:100px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tblsearch">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/js/comreq.js"></script>
<script src="~/js/master/student.js"></script>
<script type="text/javascript">
    function clearStudentData() {
        $('#txt_FirstName').val('');
        $('#txt_LastName').val('');
        $('#txt_StdEmail').val('');
        $('#ddl_StdGender').val('Select');
        $('#txt_StdPhoto').val('');
        $('#defaultImage').attr('src', '~/images/default_image.png');
        $('#cd_dob').val('');
        $('#txt_AadharNo').val('');
        $('#txt_PhoneNo').val('');
        $('#PermanentDetails').val('');
        $('#CurrentDetails').val('');
        $('#ddl_BloodGroup').val('');
        $('#txt_Nationality').val('');
        $('#txt_Religion').val('');
        $('#txt_State').val('');
        $('#txt_StdPwd').val('');
        $('#txt_StdConfrpwd').val('');
        $('#btn_submit').text('SUBMIT');
    }

    function openFileInput() {
        const fileInput = document.getElementById('txt_StdPhoto');
        fileInput.click();
    }

    function updateImage() {
        const fileInput = document.getElementById('txt_StdPhoto');
        const defaultImage = document.getElementById('defaultImage');

        if (fileInput.files.length > 0) {
            const selectedFile = fileInput.files[0];
            const objectURL = URL.createObjectURL(selectedFile);
            defaultImage.src = objectURL;
        }
    }
</script>